<div class="mx-auto border border-primary p-5 mt-5">
  <div class="text-center mb-5">
    <%= image_tag url_for(controller: '/preferences', action: 'logo'), class: "img-fluid" %>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group mb-3">
      <%= f.label :username, t('label.username') %>
      <% if params[:username].nil? %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
      <% else %>
        <%= f.text_field :username, autofocus: true, value: params[:username], autocomplete: "username", class: "form-control" %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password, t('label.password') %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <%= f.submit t('button.login'), class: "btn btn-primary btn-lg btn-block mt-3" %>
  <% end %>

  <div class="text-center p-3 mt-3">
    Â© <%= Time.current.year %> Copyright:
    <a class="text-dark" href="https://maximilian.kapra.de">Maximilian Kapra</a> |
    <%= link_to I18n.t('headings.imprint'), legal_imprint_path, class: 'text-dark' %> |
    <%= link_to I18n.t('headings.privacy_policy'), legal_privacy_policy_path, class: 'text-dark' %>
  </div>
</div>
